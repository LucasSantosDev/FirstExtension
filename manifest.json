{
    "name" : "chrome-extension",
    "manifest_version" : 2,
    "description" : "Minha primeira extens√£o",
    "version" : "1.0",
    "permissions" : [
        "unlimited_storage",
        "notifications",
        "contextMenus",
        "cookies",
        "storage",
        "idle",
        "tabs",
        "activeTab"
    ],
    "browser_action" : {
        "default_popup" : "popup.html"
    },
    "content_scripts" : [
        {
            "matches" : [
                "*://*.google.com.br/*"
            ],
            "js" : [
                "js/jquery-3.2.1.min.js",
                "js/chrome.js"
            ],
            "run_at" : "document_end",
            "persistent" : false
        }
    ]
}